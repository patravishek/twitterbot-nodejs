    "url": "https://github.com/patravishek/twitterbot-nodejs/issues"
  },
  "homepage": "https://github.com/patravishek/twitterbot-nodejs#readme",
  "devDependencies": {
    "@types/node": "^13.9.2",
    "@types/twit": "^2.2.23",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "twit": "^2.2.11"
  }
